        .col-6.col-md-4.col-lg-3
          button.btn.p-0.border-0.w-100.gallery-item(data-index='3' data-src='https://picsum.photos/id/1035/1600/900' data-title='Imagem 04' data-bs-toggle='modal' data-bs-target='#galleryModal')
            img.img-fluid.rounded.shadow-sm.w-100.lazyload(src='https://picsum.photos/id/1035/600/450')
      .row 
        .col-12.text-center
          a.btn.btn-secondary(href="#" title="Serviços")
            i.fa-brands.fa-instagram &nbsp;
            | Instagram
      #galleryModal.modal.fade(tabindex='-1')
        .modal-dialog.modal-dialog-centered.modal-xl
          .modal-content
            .modal-header
              h2#modalTitle.modal-title.h6
              button.btn-close(data-bs-dismiss='modal')
            .modal-body.position-relative.p-0
              img#modalImage.img-fluid.w-100
              // BOTÕES
              button#prevBtn.btn.btn-dark.position-absolute.top-50.start-0.translate-middle-y.ms-2
                | &lsaquo;
              button#nextBtn.btn.btn-dark.position-absolute.top-50.end-0.translate-middle-y.me-2
                | &rsaquo;
            .modal-footer.justify-content-between
              small#modalCounter.text-muted
